<odoo>
    <record id="ir_cron_birthday_reminder" model="ir.cron">
        <field name="name">Recordatorio de Cumpleaños</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="state">code</field>
        <field name="code">model._cron_send_birthday_reminders()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>

    <record id="mail_template_birthday_reminder" model="mail.template">
        <field name="name">Plantilla Recordatorio de Cumpleaños</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="subject">Recordatorio: El cumpleaños de ${object.name} es en 7 días</field>
        <field name="email_from">noreply@miempresa.com</field>
        <field name="email_to">${object.work_email}</field>
        <field name="body_html">
            <![CDATA[
            <p>Hola,</p>
            <p>Este es un recordatorio de que <strong>${object.name}</strong> cumple años en 7 días.</p>
            <p>¡No olvides felicitarlo!</p>
            ]]>
        </field>
    </record>
</odoo>
