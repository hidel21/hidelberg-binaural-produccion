<odoo>
    <record id="view_move_form_inherit_fiscal_classification" model="ir.ui.view">
        <field name="name">account.move.form.fiscal.classification</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="fiscal_classification"/>
            </xpath>
        </field>
    </record>

    <record id="view_move_tree_inherit_fiscal_classification" model="ir.ui.view">
        <field name="name">account.move.tree.fiscal.classification</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="fiscal_classification"/>
            </xpath>
        </field>
    </record>
</odoo>
