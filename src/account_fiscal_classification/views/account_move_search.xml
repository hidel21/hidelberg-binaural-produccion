<odoo>
    <record id="view_move_search_inherit_fiscal_classification" model="ir.ui.view">
        <field name="name">account.move.search.fiscal.classification</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_move_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter string="Clasificación Fiscal A" name="fiscal_a" domain="[('fiscal_classification','=','A')]"/>
                <filter string="Clasificación Fiscal B" name="fiscal_b" domain="[('fiscal_classification','=','B')]"/>
                <filter string="Clasificación Fiscal C" name="fiscal_c" domain="[('fiscal_classification','=','C')]"/>
            </xpath>
        </field>
    </record>
</odoo>
